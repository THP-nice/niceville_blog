<tr>
  <td><%= link_to post.title, authors_post_path(post) %></td>
  <td></td>
  <% if post.published? %>
  <td><%= link_to 'Unpublish', authors_unpublish_post_path(post), class: 'btn btn-sm btn-warning' %></td>
  <% else %>
  <td><%= link_to 'Publish', edit_authors_post_path(post), class: 'btn btn-sm btn-warning' %></td>
  <% end %>
  <td><%= link_to 'Remove', authors_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>